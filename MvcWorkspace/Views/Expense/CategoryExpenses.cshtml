
@model IEnumerable<Expense>
@{
    ViewData["Title"] = "Expense Categories";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-3">
                <h2 class="text-dark"> @ViewBag.ExpenseCat</h2>
                
            </div>
            <div class="col-3 text-end">
                <h3 class="text-danger">Amount Count: @ViewBag.Amounts</h3>
            </div>
    </div>
    <br />

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr class="align-middle text-primary">
                    <th>
                        Expense
                    </th>
                    <th>
                        Amount
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var expense in Model)
                {
                <tr class="align-middle">
                    <td width="20%">@expense.ExpenseName</td>
                    <td width="20%">@expense.Amount</td>
                </tr>
                }
            </tbody>
        </table> 
    }
    else
    {
        <p>No items created yet</p>
    }

</div>
